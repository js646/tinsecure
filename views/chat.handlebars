<div class="row max-width">
    <div class="container overflow-auto mt-5 mb-5">

        {{#each chat}}
          {{#if this.fromCurrentUser}}
          <div class="row d-flex justify-content-start">
            <div class="col-4 alert alert-secondary" role="alert">
              {{{printMessage this}}}
            </div>
          </div>
          {{else}}
          <div class="row d-flex justify-content-end">
            <div class="row col-4 d-flex justify-content-end alert alert-success" role="alert">
              {{{printMessage this}}}
            </div>
          </div>
          {{/if}}
        {{else}}
        <p class="empty">No messages yet</p>
        {{/each}}
    </div>
</div>

<a href="/report/{{otherUser}}">
<button class="btn btn-outline-secondary" type="submit" id="submit-report">Report User</button>
</a>
{{#if successfulReportMsg}}
  <p>Report registered, thank you</p>
{{/if}}

<div class="row">
    <form action="{{{uid1}}}-{{{uid2}}}" id="msg-form" method="post">
      <div class="col-6 input-group mb-3 fixed-bottom">
        <input type="text" id="message" name="message" class="form-control" placeholder="Your Messageâ€¦" aria-label="message" aria-describedby="button-send">
        <button class="btn btn-outline-secondary" type="submit" id="button-send">Send</button>
      </div>
    </form>
</div>
